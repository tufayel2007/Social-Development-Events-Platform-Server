{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "alwaysStrict": true,
    "target": "ES2023",
    "module": "commonJS",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "lib": [
      "es2023"
    ],

    "importHelpers": false,
    "noEmitHelpers": true,

    "noEmitOnError": true,
    "outDir": "lib",

    "inlineSourceMap": false,
    "sourceMap": true,
   
    "declaration": true,
    "declarationMap": true,
   
    "inlineSources": false,

    "types": [
      "node"
    ],
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
   
    "useUnknownInCatchVariables": false,
    "useDefineForClassFields": false,  
  },
  "ts-node": {
    "transpileOnly": true,
    "compiler": "typescript-cached-transpile"
  },
  "include": [
    "src/**/*"
  ]
}